<Window x:Class="src.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:src"
        mc:Ignorable="d"
        Title="Quran.com" Height="610" Width="810" 
        WindowStartupLocation="Manual" 
        WindowState="Minimized" 
        Cursor="" Icon="assets/icon.png" 
        ResizeMode="CanResizeWithGrip"
        MinHeight="610" MinWidth="810" MaxHeight="610" MaxWidth="810" FontFamily="Poppins ExtraLight">
    <Grid Background="#00ACC1">
        <Image HorizontalAlignment="Center" Height="126" Margin="293,85,290,363" VerticalAlignment="Center" Width="219" Source="assets/quran.png"/>
        <ScrollViewer  HorizontalAlignment="Left" Background="#00ACC1" Height="306" Margin="286,268,0,0" VerticalAlignment="Top" Width="230" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="stackPanelVistaProfiloTessera"  Background="#00ACC1">
                <Button BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Width="220" Height="72" Background="Transparent">
                    <Image Source="assets/1.png"  />
                </Button>
                <Button BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Width="220" Height="72" Background="Transparent">
                    <Image Source="assets/2.png"  />
                </Button>
                <Button BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Width="220" Height="72" Background="Transparent">
                    <Image Source="assets/3.png"  />
                </Button>
                <Button BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Width="220" Height="72" Background="Transparent">
                    <Image Source="assets/4.png"  />
                </Button>
                <Button BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Width="220" Height="72" Background="Transparent">
                    <Image Source="assets/5.png"  />
                </Button>
            </StackPanel>
        </ScrollViewer>
        <TextBlock HorizontalAlignment="Left" Margin="311,224,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Poppins ExtraBold" Foreground="#FF1D1F21" FontSize="20" Height="29"><Run Text="The Noble Quran"/><LineBreak/><Run/></TextBlock>
    </Grid>
</Window>
